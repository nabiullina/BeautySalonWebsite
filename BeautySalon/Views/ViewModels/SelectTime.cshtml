@model BeautySalon.Data.Models.ViewModel

@{
    ViewData["Title"] = "SelectTime";
}
<h1>Запись на услугу</h1>
<hr />
<dl class="row">
    <dt class = "col-sm-2">
        Клиент
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(item=>@Model.Client.Surname) @Html.DisplayFor(item=>@Model.Client.Name) @Html.DisplayFor(item=>@Model.Client.FathersName)
    </dd>
    <dt class = "col-sm-2">
        Услуга
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(item=>@Model.Service.Name)
    </dd>
    <dt class = "col-sm-2">
        Время
    </dt>
    <form asp-action="SelectTime">
        <dd class = "col-sm-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <select asp-for="Serviceprovision.Schid" class="form-control" asp-items="ViewBag.schid"></select>
        </div>
            <div class="form-group">
            <input type="submit" value="Создать" class="btn btn-primary"/>
        </div>
            </dd>

    </form>
</dl>

<div>
    <a asp-action="SelectService" asp-controller="ViewModels" asp-route-cliid="@Model.Client.Id">Вернуться к выбору услуги</a>
</div>