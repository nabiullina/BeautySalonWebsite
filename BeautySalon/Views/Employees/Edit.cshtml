@model BeautySalon.Data.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактирование</h1>

<h4>Работник</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
                    <div class="form-group">
                        Фамилия
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        Имя
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
            <div class="form-group">
                Отчество
                <input asp-for="FathersName" class="form-control"/>
                <span asp-validation-for="FathersName" class="text-danger"></span>
            </div>
                    <div class="form-group">
                        Номер телефона
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
            <div class="form-group">
                Должности
                <p/>
                @foreach (var itemPos in @Model.EmployeesOnPositions)
                {
                    <li>
                        @Html.DisplayFor(modelItem => itemPos.Pos.Name)
                    </li>
                }
            </div>
            <div class="form-group">
                <a asp-action="AddPos" asp-controller="ViewModels" asp-route-id="@Model.Id"  class="btn btn-primary">Изменить должности</a>
                @* <input asp-action="AddPos" value="Add position" class="btn btn-primary"/> *@
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary"/>
            </div>
            
                </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
