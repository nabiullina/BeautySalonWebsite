@model IEnumerable<BeautySalon.Data.Models.Schedule>

@{
    ViewData["Title"] = "Расписание";
}

<h1>Расписание</h1>

<form method="get">
    <div class="form-inline form-group">
        <label class="control-label">Дата: </label>
        <input type="datetime-local" name="date" class="form-control" />
        <input type="submit" value="Фильтр" class="btn btn-primary" />
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Дата</th>
            <th>Статус</th>
            <th>Работник</th>
            <th>Услуга</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp.Surname)
                @Html.DisplayFor(modelItem => item.Emp.Name)
                @Html.DisplayFor(modelItem => item.Emp.FathersName)
            </td>
            <td>@Html.DisplayFor(modelItem=>item.Serviceprovision.Ser.Name)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
